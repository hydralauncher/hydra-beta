---
import Layout from "@/layouts/layout.astro";
import { App } from "@/app";
import { api } from "@/services";
import type { User } from "@/types";

const { id } = Astro.params;

const user = await api.get<User>(`users/${id}`).json();
---

<Layout>
  <App client:load initialPath={`/profile/${id}`} user={user} />
</Layout>
