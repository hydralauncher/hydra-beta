{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hydra Launcher",
  "version": "0.1.0-alpha",
  "identifier": "com.losbroxas.hydra-launcher.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:4321",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Hydra Launcher",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
